<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="generator" content="{{ eleventy.generator }}" />
        {% if meta.description %}
        <meta name="description" content="{{ meta.description }}" />
        {% endif %}
        {% if meta.noindex %}
        <meta name="robots" content="noindex, follow" />
        {% endif %}
        {% render "partials/site-includes" site: site %}
        <title>{{ title }} â€¢ {{ site.siteName }}</title>
    </head>
    <body>
        <div class="[ site-wrap ] [ flow flow-space-xl ]">
            {%unless hide_header %}
                {% render "partials/site-header"
                    site: site,
                    page: page
                    %}
            {%endunless %}
            <main tabindex="-1" id="main-content">
                <div class="[ wrapper ]">
                    {{ content }}
                </div>
            </main>
            {%unless hide_footer %}
                {% render "partials/site-footer"
                    helpers: helpers,
                    site: site,
                    page: page,
                    company_info: company_info %}
            {%endunless %}
        </div>
    </body>
</html>
