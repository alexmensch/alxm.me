---
layout: layouts/base.liquid
title: Writing
---
<div class="introduction">
  <h1>{{ title }}</h1>
  <p>{{ content }}</p>
</div>
<div class="content">
  <ul class="collection-grid">
    {% for post in collections.writing %}
      <li>
        <div class="title"><a href="{{ post.url }}">{{ post.data.title }}</a></div>
        <div class="summary">{{ post.data.summary }}</div>
        {% if post.data.tags %}
        <ul class="tags">
          {% for tag in post.data.tags %}
          <li>{{ tag }}</li>
          {% endfor %}
        </ul>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
</div>
