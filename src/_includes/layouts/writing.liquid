<section>
  <div class="introduction">
    <h1>{{ title }}</h1>
    <p>{{ content }}</p>
  </div>
  <div class="content">
    <ul>
      {% for post in collections.writing %}
        <li><a href="{{ post.url }}">{{ post.data.title }}</a></li>
      {% endfor %}
    </ul>
  </div>
</section>
