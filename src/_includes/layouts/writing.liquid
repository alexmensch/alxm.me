---
layout: layouts/base.liquid
title: Writing
---
<section>
  <img src="/assets/images/header-image.jpg" alt="Header Image">
  <h1>Writing</h1>
  <p>{{ content }}</p>
  <hr>
  <ul class="collection-grid">
    {% for post in collections.writing %}
      <li>
        <div class="title"><a href="{{ post.url }}">{{ post.data.title }}</a></div>
        <div class="summary">{{ post.data.summary }}</div>
        {% if post.data.tags %}
        <ul class="tags">
          {% for tag in post.data.tags %}
          <li>{{ tag }}</li>
          {% endfor %}
        </ul>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
</section>
