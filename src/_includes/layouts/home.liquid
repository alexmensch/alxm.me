---
layout: layouts/base
---
<section class="cover">
  <div class="box">
    <div class="stack">
      <div class="box">
        <h1 class="measure-compact">{{ main.title }}</h1>
      </div>
      <div class="[ cluster ] [ flow-space-xs ]">
        <section class="[ box ] [ flow ]">
          {% for line in main.text %}
            <p class="measure-compact">{{ line | markdownify }}</p>
          {% endfor %}
        </section>
        <section class="box">
          <ul class="[ stack ] [ flow-space-xs ]">
              {% for link in links %}
                  <li>
                      <a href="{{ link.url }}">{{ link.text }}</a>
                  </li>
              {% endfor %}
          </ul>
        </section>
      </div>
    </div>
  </div>
</section>
