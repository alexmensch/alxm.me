---
layout: layouts/base.liquid
collapseNav: true
---
<div class="content">
  <article>
    <h1>{{ title }}</h1>
    <div class="date-byline">
      {% if update_date %}
        Last updated {{ update_date | date: "%e %B, %Y"}}, originally posted {{ date | date: "%e %B, %Y"}}
      {% else %}
        Posted {{ date | date: "%e %B, %Y"}}
      {% endif %}
    </div>
    {{ content }}
  </article>
</div>
