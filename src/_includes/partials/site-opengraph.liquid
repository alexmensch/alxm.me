{% if ogData %}
    {% ogImage "./_includes/open-graph/og-posts.og.liquid", ogData %}
    {% if summary %}
    <meta name="description" property="og:description" content="{{ summary }}" />
    {% endif %}
    <meta property="og:type" content="article" />
{% else %}
    <meta property="og:type" content="website" />
{% endif %}
    <meta name="title" property="og:title" content="{{ pageTitle }}" />
    <meta property="og:url" content="https://{{ site.domain }}{{ page.url }}" />
    <meta name="locale" property="og:locale" content="en_GB" />