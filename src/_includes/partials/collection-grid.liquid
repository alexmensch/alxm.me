<div class="collection-grid">
  {% for post in collection reversed %}
    <div class="collection-grid item">
      <div class="title">
        <a href="{{ post.url }}">{{ post.data.title }}</a>
      </div>
      <div class="summary">{{ post.data.summary }}</div>
      <!-- {% if post.data.tags %}
      <div class="tags">
        {% for tag in post.data.tags %}
        <div class="tags item">{{ tag | capitalize }}</div>
        {% endfor %}
      </div>
      {% endif %} -->
      <div class="date">{{ post.date | date: "%e %b %Y" }}</div>
    </div>
  {% endfor %}
</div>
