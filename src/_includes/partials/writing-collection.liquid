<div class="[ gutter flow flow-space-m ]">
  <div>
    <h1 class="">{{ year }}</h1>
  </div>
  <div class="flow">
    {% for post in collection reversed %}
    <div>
      <div class="flow flow-space-xs">
        <h4><a href="{{ post.url }}">{{ post.data.title }}</a></h4>
        <p><em>{{ post.date | date: "%e %b %Y" }}</em></p>
        <p>{{ post.data.summary }}</p>
      </div>
    </div>
    {% endfor %}
  </div>
</div>