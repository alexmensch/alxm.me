<div class="[ writing-collection ] [ flow flow-space-m ]">
  <div class="writing-collection__header">
    <h1 class="">{{ year }}</h1>
  </div>
  <div class="writing-collection__items">
    {% for post in collection reversed %}
    <div class="writing-collection__post">
      <h4><a href="{{ post.url }}">{{ post.data.title }}</a></h4>
      <p><em>{{ post.date | date: "%e %b %Y" }}</em></p>
      <p>{{ post.data.summary }}</p>
    </div>
    {% endfor %}
  </div>
</div>