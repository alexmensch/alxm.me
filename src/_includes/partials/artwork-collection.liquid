<div class="box" id="{{ artwork.data.page_slug }}">
  <div class="flow flow-space-s">
    <div class="[ box ] [ padding-none ]">
      <a href="{{ artwork.page.url }}">
        <div class="frame" data-fit-content data-ratio="{{ artwork.data.ratio }}" {%- if artwork.data.landscape %}data-landscape{%- endif %}>
          <img src="{{ artwork.data.image }}" alt="{%- if description %}{{ description }}{% else %}Artwork preview image{%- endif %}" />
        </div>
      </a>
    </div>
  </div>
</div>