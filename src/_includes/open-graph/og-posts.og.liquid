    line-height: 1.1;
    margin: 0;
    margin-bottom: 1em;
  }

  .date {
    font-family: "Source Serif 4";
    font-size: 32px;
    font-weight: 700;
    color: #fdf8f3;

    font-style: italic;

    margin: 0;
    margin-left: 10px;
  }
