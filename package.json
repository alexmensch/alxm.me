{
  "name": "alxm.me",
  "version": "3.0.0",
  "description": "alxm.me public website",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "pnpm run format && pnpm run lint && npx @11ty/eleventy && node check-permalinks.js",
    "build:cf": "pnpm run build && cd _cloudflare && pnpm install && cd .. && node _cloudflare/sync-r2.js && node _cloudflare/cleanup-files.js",
    "clean": "rm -rf _site",
    "format": "npx prettier . -wl",
    "11ty:watch": "npx @11ty/eleventy --serve",
    "11ty:debug": "DEBUG=Eleventy* npx @11ty/eleventy --serve",
    "lint": "pnpm run lint:js && pnpm run lint:css && pnpm run lint:md",
    "lint:js": "eslint .",
    "lint:css": "stylelint \"src/**/*.{css,scss}\"",
    "lint:md": "markdownlint-cli2 \"src/**/*.md\"",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:css -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexmensch/alxm.me.git"
  },
  "author": "Alex Marshall",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexmensch/alxm.me/issues"
  },
  "homepage": "https://github.com/alexmensch/alxm.me#readme",
  "dependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-img": "^6.0.4",
    "@11ty/eleventy-plugin-directory-output": "^1.0.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
    "dotenv": "^17.2.1",
    "eleventy-plugin-cloudflare-kv": "^1.0.2",
    "eleventy-plugin-og-image": "^4.2.0",
    "eleventy-plugin-purgecss": "^0.5.0",
    "get-audio-duration": "^4.0.1",
    "lorem-ipsum": "^2.0.8",
    "luxon": "^3.7.2",
    "markdown-it": "^14.1.0",
    "markdown-it-footnote": "^4.0.0",
    "markdown-it-for-inline": "^2.0.1",
    "markdown-it-smartarrows": "^1.0.1",
    "sass": "^1.92.1",
    "slugify": "^1.6.6",
    "utopia-core-scss": "^1.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "depcheck": "^1.4.7",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.3.0",
    "markdownlint-cli2": "^0.18.1",
    "prettier": "^3.6.2",
    "stylelint": "^16.24.0",
    "stylelint-config-standard-scss": "^15.0.1"
  },
  "pnpm": {
    "overrides": {
      "sharp": "0.33.5",
      "@img/sharp-darwin-arm64": "0.33.5",
      "@img/sharp-libvips-darwin-arm64": "1.0.4"
    },
    "onlyBuiltDependencies": [
      "@ffprobe-installer/darwin-arm64",
      "@ffprobe-installer/linux-x64",
      "@parcel/watcher",
      "sharp"
    ]
  }
}
