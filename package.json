{
  "name": "alxm.me",
  "version": "3.0.0",
  "description": "alxm.me public website",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "npx @11ty/eleventy && node check-permalinks.js",
    "build:cf": "cd _cloudflare && pnpm install && cd .. && node _cloudflare/sync-r2.js && npx @11ty/eleventy && node check-permalinks.js && node _cloudflare/cleanup-files.js",
    "clean": "rm -rf _site",
    "pretty": "npx prettier . -wl",
    "11ty:watch": "npx @11ty/eleventy --serve",
    "11ty:debug": "DEBUG=Eleventy* npx @11ty/eleventy --serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexmensch/alxm.me.git"
  },
  "author": "Alex Marshall",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexmensch/alxm.me/issues"
  },
  "homepage": "https://github.com/alexmensch/alxm.me#readme",
  "dependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-fetch": "^5.1.0",
    "@11ty/eleventy-img": "^6.0.4",
    "@11ty/eleventy-plugin-directory-output": "^1.0.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
    "deepmerge": "^4.3.1",
    "dotenv": "^17.2.1",
    "eleventy-plugin-og-image": "^4.2.0",
    "eleventy-plugin-purgecss": "^0.5.0",
    "get-audio-duration": "^4.0.1",
    "gray-matter": "^4.0.3",
    "hookable": "^5.5.3",
    "lorem-ipsum": "^2.0.8",
    "luxon": "^3.7.1",
    "markdown-it": "^14.1.0",
    "markdown-it-footnote": "^4.0.0",
    "markdown-it-for-inline": "^2.0.1",
    "markdown-it-smartarrows": "^1.0.1",
    "ofetch": "^1.4.1",
    "sass": "^1.90.0",
    "slugify": "^1.6.6",
    "ufo": "^1.6.1",
    "utopia-core-scss": "^1.3.0"
  },
  "devDependencies": {
    "prettier": "^3.6.2"
  },
  "pnpm": {
    "overrides": {
      "sharp": "0.33.5",
      "@img/sharp-darwin-arm64": "0.33.5",
      "@img/sharp-libvips-darwin-arm64": "1.0.4"
    },
    "onlyBuiltDependencies": [
      "@ffprobe-installer/darwin-arm64",
      "@ffprobe-installer/linux-x64",
      "@parcel/watcher",
      "sharp"
    ]
  }
}
